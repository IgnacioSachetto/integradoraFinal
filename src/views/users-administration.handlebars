<link rel="stylesheet" type="text/css" href="/styles/users.css">

<div class="container">
    <h1>User Administration</h1>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Last Connection</th>
                <th>Rol</th>
                <th>Change Rol</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="dynamic-user-list">
            {{#each allUsers}}
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.email}}</td>
                <td>{{this.lastconnection}}</td>
                <td>{{this.rol}}</td>
                <td>

                    <button class="btn-change-rol" type="button" value="{{this.id}}">Change Rol</button>
                </td>
                <td>
                    <button class="btn-delete" type="button" value="{{this.id}}">Delete</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <button class="btn-deleteinactives" id="check-inactive-users">Verificar usuarios inactivos</button>

</div>

<script src="/socket.io/socket.io.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/users.js"></script>